<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chat_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sung.demo.democollections.IMChat.view.ChatLogin">

    <TextView
        android:gravity="center"
        android:layout_marginTop="@dimen/vedio_bottom_actionbar_size"
        android:textSize="@dimen/xlarge_text"
        android:textColor="@color/text_disable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="环信IM"/>

    <LinearLayout
        android:id="@+id/control_ui"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/button_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="username"
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/password"
            android:hint="password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="login"
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="regist"
            android:id="@+id/regist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:gravity="right"
            android:layout_margin="@dimen/button_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="注销登录"
                android:textColor="@color/colorPrimary"
                android:layout_margin="@dimen/button_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/logout" />
            <TextView
                android:text="消息列表"
                android:textColor="@color/colorPrimary"
                android:layout_margin="@dimen/button_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/msglist" />
            <TextView
                android:text="和好友聊天"
                android:textColor="@color/colorPrimary"
                android:layout_margin="@dimen/button_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chat" />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_below="@+id/control_ui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/result"
                android:layout_margin="@dimen/button_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
